<!DOCTYPE html>
<html>
  <head>
    <title>ActivationTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav-bar">
      <% if logged_in? %>
        <div class="log-out">
          <%=link_to "Log Out", logout_path, method:"delete" %>
        </div>
        <div class="nav-buttons">
          <%=link_to "Add a Phone", new_phone_path %> |
          <%=link_to "All Phones", phones_path %> |
          <%=link_to "Add a Carrier", new_carrier_path %> |
          <%=link_to "All Carriers", carriers_path %>|
          <%=link_to "All Activation", activations_path %>
        </div>
      <% else %>
        <div class="log-in">
          <%=link_to "Sign Up", signup_path %> |
          <%=link_to "Log In", login_path %> 
        </div>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
